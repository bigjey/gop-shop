{
  "name": "gop-shop",
  "version": "1.0.0",
  "main": "dist/server/index.js",
  "engines": {
    "node": "14.x"
  },
  "description": "",
  "scripts": {
    "start": "node dist/server/index.js",
    "dev:server": "nodemon --exec ts-node src/server",
    "dev:client": "npm-run-all dev:client:clean dev:client:start --serial",
    "dev:client:clean": "rimraf dist/client",
    "dev:client:start": "cross-env PARCEL_WORKER_BACKEND=process parcel watch src/admin/admin.html src/shop/shop.html --dist-dir dist/client",
    "build": "npm-run-all fix --serial build:server build:client --parallel",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "cross-env PARCEL_WORKER_BACKEND=process parcel build src/admin/admin.html src/shop/shop.html --dist-dir dist/client",
    "clean": "rimraf dist",
    "fix": "npm-run-all lint:fix prettier:fix --serial",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier ./src",
    "prettier:fix": "npm run prettier -- --write",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.28.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.15",
    "parcel": "^2.2.1",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "express": "^4.17.2",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
